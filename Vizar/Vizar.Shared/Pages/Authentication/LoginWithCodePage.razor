@page "/login-with-code"
<PageTitle>Login With Code - Vizar</PageTitle>

<div class="login-container">
	<div class="login-card">
		<!-- Header Section -->
		<div class="login-header">
			<div class="logo-container">
				<h1 class="logo-text">Vizar</h1>
			</div>
			<h2 class="welcome-text">Secure Login</h2>
			<p class="subtitle">Enter your email or phone to receive a verification code</p>
		</div>

		<!-- Form Section -->
		<div class="login-form">
			<!-- Phone/Email Input -->
			<div class="form-group">
				<SfTextBox Placeholder="Email or Phone Number"
						   FloatLabelType="FloatLabelType.Auto"
						   @bind-Value="@_phoneEmail"
						   @ref="_phoneEmailTextBox"
						   CssClass="custom-input" />
			</div>

			<!-- Send Code Button -->
			<div class="form-group">
				<SfButton Content="@(_isCodeSent ? "Resend Code" : "Send Verification Code")"
						  OnClick="OnSendCodeClick"
						  Disabled="_isVerifying"
						  CssClass="@(_isCodeSent ? "btn-secondary" : "btn-primary")" />
			</div>

			<!-- Code Placeholder Info -->
			@if (_isCodeSent)
			{
				<div class="info-box">
					<svg class="info-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
						<circle cx="12" cy="12" r="10"></circle>
						<line x1="12" y1="16" x2="12" y2="12"></line>
						<line x1="12" y1="8" x2="12.01" y2="8"></line>
					</svg>
					<p class="info-text">@_codePlaceholder</p>
				</div>
			}

			<!-- OTP Input -->
			<div class="form-group otp-section">
				<label class="form-label">Enter Verification Code</label>
				<SfOtpInput Length="6"
							Placeholder="000000"
							@bind-Value="_otpCode"
							@ref="_otpInput"
							Type="OtpInputType.Number"
							Disabled="!_isCodeSent"
							CssClass="custom-otp" />
			</div>

			<!-- Password Reset (Optional) -->
			@if (_isEnabledUsersResetPassword && _isCodeSent)
			{
				<div class="form-group">
					<SfTextBox Placeholder="New Password (Optional)"
							   FloatLabelType="FloatLabelType.Auto"
							   @bind-Value="@_newPassword"
							   Type="InputType.Password"
							   @ref="_newPasswordTextBox"
							   CssClass="custom-input" />
					<small class="helper-text">Leave empty to keep your current password</small>
				</div>
			}

			<!-- Login Button -->
			<div class="form-group">
				<SfButton Content="@(_isVerifying ? "Verifying..." : "Login to Vizar")"
						  OnClick="OnLoginWithCodeClick"
						  Disabled="!_isCodeSent || _otpCode.Length < 6 || _isVerifying"
						  CssClass="btn-login" />
			</div>

			<!-- Back to Password Login -->
			<div class="form-footer">
				<p class="back-link" @onclick='() => NavigationManager.NavigateTo("/login")'>
					<svg class="back-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
						<line x1="19" y1="12" x2="5" y2="12"></line>
						<polyline points="12 19 5 12 12 5"></polyline>
					</svg>
					Back to Password Login
				</p>
			</div>
		</div>
	</div>

	<!-- Footer -->
	<div class="login-footer">
		<p>© @DateTime.Now.Year A Product By <a href="https://aadisoft.vercel.app" target="_blank">AadiSoft</a>. All rights reserved.</p>
	</div>
</div>

<!-- Toast Notifications -->
<SfToast @ref="_sfErrorToast"
		 ID="_sfErrorToast"
		 Title="@_errorTitle"
		 Content="@_errorMessage"
		 Timeout="5000"
		 CssClass="error-toast">
	<ToastPosition X="Right" Y="Top" />
	<ToastShowAnimationSettings Effect="ToastEffect.SlideLeftIn" />
	<ToastHideAnimationSettings Effect="ToastEffect.SlideRightOut" />
</SfToast>

<SfToast @ref="_sfSuccessToast"
		 ID="_sfSuccessToast"
		 Title="@_successTitle"
		 Content="@_successMessage"
		 Timeout="5000"
		 CssClass="success-toast">
	<ToastPosition X="Right" Y="Top" />
	<ToastShowAnimationSettings Effect="ToastEffect.SlideLeftIn" />
	<ToastHideAnimationSettings Effect="ToastEffect.SlideRightOut" />
</SfToast>

<style>
